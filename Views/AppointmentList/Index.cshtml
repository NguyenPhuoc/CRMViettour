@{
    ViewBag.Title = "Quản lý Danh sách lịch hẹn";
}

<div class="page-content">
    <!-- BEGIN PAGE HEAD-->
    <div class="page-head">
        <!-- BEGIN PAGE TITLE -->
        <div class="page-title">
            <h1>DANH SÁCH LỊCH HẸN</h1>
        </div>
        <!-- END PAGE TITLE -->

    </div>
    <!-- END PAGE HEAD-->
    <!-- BEGIN PAGE BREADCRUMB -->
    <ul class="page-breadcrumb breadcrumb">
        <li>
            <a href="index.html">Home</a>
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <span class="active">Page Layouts</span>
        </li>
    </ul>
    <!-- END PAGE BREADCRUMB -->
    <!-- BEGIN PAGE BASE CONTENT -->
    <div class="note note-info">
        <div class="row">
            <div class="col-md-4">
                <label>Chức năng lịch hẹn</label>
                <select class="form-control" id="nhanvien-lichhen">
                    <option>Danh sách nhiệm vụ</option>
                    <option>Danh sách đi tour</option>
                    <option>Danh sách theo nhân viên</option>
                    <option>-----------------</option>
                </select>
            </div>
            <div class="col-md-4">
                <label>Từ ngày</label>
                <div class="input-group date form_datetime date date-picker" data-date-format="dd/mm/yyyy">
                    <input type="text" class="form-control" readonly id="tungay-lichhen">
                    <span class="input-group-btn">
                        <button class="btn default date-set" type="button">
                            <i class="fa fa-calendar"></i>
                        </button>
                    </span>
                </div>
            </div>
            <div class="col-md-4">
                <label>Đến ngày</label>
                <div class="input-group date form_datetime date date-picker" data-date-format="dd/mm/yyyy">
                    <input type="text" class="form-control" readonly id="denngay-lichhen">
                    <span class="input-group-btn">
                        <button class="btn default date-set" type="button">
                            <i class="fa fa-calendar"></i>
                        </button>
                    </span>
                </div>
            </div>
            <div class="col-md-12 margintop10">
                <a class="btn btn-default" href="@Url.Action("Index", "AppointmentList")"><i class="fa fa-refresh"></i>&nbsp;Nạp</a>
                <button class="btn btn-primary" id="btnAdd" href="#modal-insert-appointment" data-toggle="modal"><i class="fa fa-plus"></i>&nbsp;Thêm</button>
                <button class="btn btn-warning" id="btnEdit" href="#modal-edit-appointment" data-toggle="modal"><i class="fa fa-pencil"></i>&nbsp;Sửa</button>
                <button class="btn btn-danger" id="btnRemove"><i class="fa fa-remove"></i>&nbsp;Xóa</button>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="portlet light bordered">
                <div class="portlet-body">
                    <div class="tabbable-custom ">
                        <ul class="nav nav-tabs ">
                            <li class="active">
                                <a href="#tab1" data-toggle="tab">Dạng lưới</a>
                            </li>
                            <li>
                                <a href="#tab2" data-toggle="tab">Dạng lịch</a>
                            </li>
                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane active" id="tab1">
                                @*Dạng lưới*@
                                <div class="table-scrollable table-custom-format">
                                    <table class="table table-striped table-bordered table-hover" id="">
                                        <thead>
                                            <tr>
                                                <th class="table-checkbox">
                                                    <input type="checkbox" id="allcb" name="allcb" onclick="SelectAllCb()" />
                                                </th>
                                                <th>STT</th>
                                                <th>Ngày hẹn</th>
                                                <th>Khách hàng</th>
                                                <th>Điện thoại</th>
                                                <th>Email</th>
                                                <th>Chiến dịch</th>
                                                <th>Nhiệm vụ</th>
                                                <th>Dịch vụ</th>
                                                <th>Đối tác</th>
                                                <th>Tour</th>
                                                <th>Diễn giải</th>
                                                <th>Nhân viên</th>
                                                <th>Trạng thái</th>
                                                <th>Người nhập</th>
                                                <th>Ngày nhập</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @for (int i = 0; i < 5; i++)
                                            {
                                                <tr class="odd gradeX">
                                                    <td>
                                                        <input type="checkbox" id="cb@(i)" name="cb@(i)" onclick="CheckSelect()" />
                                                    </td>
                                                    <td></td>
                                                    <td></td>
                                                    <td></td>
                                                    <td></td>
                                                    <td></td>
                                                    <td></td>
                                                    <td></td>
                                                    <td></td>
                                                    <td></td>
                                                    <td></td>
                                                    <td></td>
                                                    <td></td>
                                                    <td></td>
                                                    <td></td>
                                                    <td></td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <div class="tab-pane" id="tab2">
                                @*Dạng lịch*@

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- END PAGE BASE CONTENT -->
</div>

@Html.Partial("_Partial_InsertAppointment")
@Html.Partial("_Partial_EditAppointment")

@section scripts{
    <script>
        CKEDITOR.replace("AppointmentNoteEdit");
        CKEDITOR.replace("AppointmentNoteInsert");
    </script>
}