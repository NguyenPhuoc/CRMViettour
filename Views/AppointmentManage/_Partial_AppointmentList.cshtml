@using CRM.Core
@using CRMViettour.Utilities
@model IEnumerable<tbl_AppointmentHistory>

<div class="table-scrollable table-custom-format">
    <table class="table table-striped table-bordered table-hover" id="">
        <thead>
            <tr>
                <th class="table-checkbox">
                    <input type="checkbox" id="allcb" name="allcb" onclick="SelectAllCb()" />
                </th>
                <th>Ngày hẹn</th>
                <th>Khách hàng</th>
                <th>Điện thoại</th>
                <th>Email</th>
                <th>Chiến dịch</th>
                <th>Nhiệm vụ</th>
                <th>Dịch vụ</th>
                <th>Đối tác</th>
                <th>Tour</th>
                <th>Diễn giải</th>
                <th>Nhân viên</th>
                <th>Trạng thái</th>
                <th>Người nhập</th>
                <th>Ngày nhập</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="odd gradeX">
                    <td>
                        <input type="checkbox" id="cb@(item.Id)" class="cbItem" value="@item.Id" name="cb" onclick="CheckSelect()" />
                    </td>
                    <td>@string.Format("{0:dd-MM-yyyy}", item.Time)</td>
                    <td>@(item.CustomerId != null ? item.tbl_Customer.FullName : "")</td>
                    <td>@(item.CustomerId != null ? item.tbl_Customer.MobilePhone : "")</td>
                    <td>@(item.CustomerId != null ? item.tbl_Customer.PersonalEmail : "")</td>
                    <td>@(item.ProgramId != null ? item.tbl_Program.Name : "")</td>
                    <td>@(item.TaskId != null ? item.tbl_Task.Name : "")</td>
                    <td>@(item.ServiceId != null ? item.tbl_DictionaryService.Name : "")</td>
                    <td>@(item.PartnerId != null ? item.tbl_Partner.Name : "")</td>
                    <td>@(item.TourId != null ? item.tbl_Tour.Name : "")</td>
                    <td>@Html.Raw(item.Note)</td>
                    <td>@(item.OtherStaff != null ? LoadData.StaffPermission(item.OtherStaff) : "")</td>
                    <td>@(item.StatusId != null ? item.tbl_DictionaryStatus.Name : "")</td>
                    <td>@(item.StaffId != null ? item.tbl_Staff.FullName : "")</td>
                    <td>@string.Format("{0:dd-MM-yyyy}", item.CreatedDate)</td>
                </tr>
            }
        </tbody>
    </table>
</div>



