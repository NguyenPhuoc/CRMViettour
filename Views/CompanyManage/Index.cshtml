@using CRMViettour.Models
@using CRMViettour.Utilities
@model IEnumerable<CompanyViewModel>

@{
    ViewBag.Title = "Quản lý Công ty";
}

<div class="page-content">
    <!-- BEGIN PAGE HEAD-->
    <div class="page-head">
        <!-- BEGIN PAGE TITLE -->
        <div class="page-title">
            <h1>DANH SÁCH CÔNG TY</h1>
        </div>
        <!-- END PAGE TITLE -->

    </div>
    <!-- END PAGE HEAD-->
    <!-- BEGIN PAGE BREADCRUMB -->
    <ul class="page-breadcrumb breadcrumb">
        <li>
            <a href="index.html">Home</a>
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <span class="active">Page Layouts</span>
        </li>
    </ul>
    <!-- END PAGE BREADCRUMB -->
    <!-- BEGIN PAGE BASE CONTENT -->
    <div class="note note-info">
        <div class="row">
            <div class="col-md-12">
                <a class="btn btn-default" href="@Url.Action("Index", "CompanyManage")"><i class="fa fa-refresh"></i>&nbsp;Nạp</a>
                <button class="btn btn-primary" id="btnAdd" href="#modal-insert-company" data-toggle="modal"><i class="fa fa-plus"></i>&nbsp;Thêm</button>
                <button class="btn btn-warning" id="btnEdit"><i class="fa fa-pencil"></i>&nbsp;Sửa</button>
                <button class="btn btn-danger" id="btnRemove"><i class="fa fa-remove"></i>&nbsp;Xóa</button>
                <form action="@Url.Action("Delete", "CompanyManage")" method="post" style="position:absolute">
                    @Html.AntiForgeryToken()
                    <input type="hidden" id="listItemId" name="listItemId" />
                </form>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="portlet light bordered">
                <div class="portlet-body">
                    <div class="table-responsive table-custom-format" id="tableDictionary-Wrapper">
                        <table class="table table-striped table-bordered table-hover dataTable" id="tableDictionary">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                </tr>
                                <tr>
                                    <th class="table-checkbox"><input type="checkbox" id="allcb" name="allcb" onclick="SelectAllCb()" /></th>
                                    <th>Tên công ty</th>
                                    <th>Địa chỉ</th>
                                    <th>Mã số thuế</th>
                                    <th>Số tour đã đi</th>
                                    <th>Tổng giá trị</th>
                                    <th>Ghi chú</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="odd gradeX">
                                        <td>
                                            <input type="checkbox" id="cb@(item.Id)" class="cbItem" value="@item.Id" name="cb" onclick="CheckSelect()" />
                                        </td>
                                        <td>@item.Name</td>
                                        <td>@item.Address, @LoadData.LocationTags(item.TagsId)</td>
                                        <td>@item.TaxCode</td>
                                        <td></td>
                                        <td></td>
                                        <td>@Html.Raw(item.Note)</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="portlet light bordered">
                <div class="portlet-body">
                    <div class="tabbable-custom ">
                        <ul class="nav nav-tabs ">
                            <li class="active">
                                <a href="#tab1" class="active" data-toggle="tab">Tour</a>
                            </li>
                            <li>
                                <a href="#tab2" data-toggle="tab">Tài liệu mẫu</a>
                            </li>
                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane active" id="tab1">
                                @*Tour*@
                                <div class="table-scrollable table-custom-format">
                                    <table class="table table-striped table-bordered table-hover">
                                        <thead>
                                            <tr>
                                                <th>STT</th>
                                                <th>Code tour</th>
                                                <th>Tên tour</th>
                                                <th>Ngày bắt đầu</th>
                                                <th>Ngày kết thúc</th>
                                                <th>Loại tour</th>
                                                <th>Trạng thái</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr class="odd gradeX">
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <div class="tab-pane" id="tab2">
                                <button class="btn btn-primary" id="btnDocumentFile"><i class="fa fa-plus"></i>&nbsp;Thêm</button>
                                <br />
                                <br />
                                @*Tai lieu*@
                                <div class="table-scrollable table-custom-format" id="table-document">
                                    @Html.Action("_Partial_CompanyDocument", "CompanyManage")
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- END PAGE BASE CONTENT -->
</div>

@Html.Partial("_Partial_InsertCompany", new CRM.Core.tbl_Company())
<div id="info-data">
</div>
@Html.Partial("_Partial_InsertDocument", new CRM.Core.tbl_DocumentFile())
<div id="info-data-doc">
</div>
<div id="viewfile"></div>

@section scripts{
    <script src="~/Scripts/controller/company.js"></script>
    <script>
        function viewFileOnline(id) {
            $("#viewfile").html("<div id='modal-view-file' class='modal fade' role='dialog'>" +
            "<div class='modal-dialog'><div class='modal-content'>" +
            "<iframe src='" + $("#txtURL" + id) + "' width='500px' height='350px' frameborder='0'></iframe>" +
            "</div></div></div>");
            $("#modal-view-file").modal("show");
        }
    </script>
}
