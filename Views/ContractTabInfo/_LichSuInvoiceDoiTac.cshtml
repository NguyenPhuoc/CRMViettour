@using CRM.Core
@using CRMViettour.Models
@using CRMViettour.Utilities
@model IEnumerable<InvoiceListViewModel>
    @{
        int i = 1;
    }
    <div class="table-scrollable table-custom-format">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>STT</th>
                    <th>Đối tác</th>
                    <th>Dịch vụ</th>
                    <th>Ngày</th>
                    <th>Yêu cầu xử lý</th>
                    <th>Trạng thái xử lý</th>
                    <th>Diễn giải</th>
                    <th>Mã tour</th>
                    <th>Tên tour</th>
                    <th>Nhân viên xử lý</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    foreach (var item in Model)
                    {
                        <tr class="odd gradeX">
                            <td>@i</td>
                            <td>@item.Partner</td>
                            <td>@item.Service</td>
                            <td>@string.Format("{0:dd-MM-yyyy}", item.Date)</td>
                            <td>@item.Name</td>
                            <td>@item.Status</td>
                            <td>@item.Note</td>
                            <td>@item.CodeTour</td>
                            <td>@item.NameTour</td>
                            <td>@item.NameStaff</td>
                        </tr>
                        i++;
                    }
                }
            </tbody>
        </table>
    </div>
