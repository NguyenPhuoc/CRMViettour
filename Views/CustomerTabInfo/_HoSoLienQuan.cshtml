@using CRM.Core
@using CRMViettour.Models
@using CRMViettour.Utilities
@model IEnumerable<tbl_DocumentFile>
@{
    int i = 1;
}

<div class="table-scrollable table-custom-format">
    <button class="btn btn-primary" onclick="btnCreateFile()" id="btndocumentfile"><i class=" fa fa-plus"></i>&nbsp;Thêm</button>
    <br />
    <br />
    <div class="table-scrollable table-custom-format" id="table-document">
        <table class="table table-striped table-bordered  table-hover">
            <thead>
                <tr>
                    <th>STT</th>
                    <th>Tags</th>
                    <th>Tên tài liệu</th>
                    <th>Diễn giải</th>
                    <th>Kích thước</th>
                    <th>Nhân viên nhập</th>
                    <th>Ngày cập nhật</th>
                    <th>#</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    foreach (var item in Model)
                    {
                        <tr class="odd gradeX" id="fileCustomer@(item.Id)">
                            <td>@i</td>
                            <td>@LoadData.LocationTags(item.TagsId)</td>
                            <td>
                                <a style="cursor:pointer" onclick="viewFileOnline(@item.Id)">@item.FileName</a>
                                @*<input type="hidden" value="@item.URL" id="txtURL@(item.Id)" />*@
                            </td>
                            <td>@Html.Raw(item.Note)</td>
                            <td>@item.FileSize</td>
                            <td></td>
                            <td>@string.Format("{0:dd-M-yyyy}", item.CreatedDate)</td>
                            <td>
                                <a style="cursor: pointer" onclick="updateDocument(@item.Id)"><i class="fa fa-pencil"></i>&nbsp;Sửa</a><br />
                                <a style="cursor: pointer" onclick="confirm('Bạn thực sự muốn xóa những mục đã chọn ?'); deleteDocument(@item.Id)"><i class="fa fa-trash"></i>&nbsp;Xóa</a>
                            </td>
                        </tr>
                        i++;
                    }
                }
            </tbody>
        </table>
    </div>
</div>

