@using CRM.Core
@using CRMViettour.Utilities
@model IEnumerable<tbl_CustomerContact>
@{
    int i = 1;
}

<div class="table-scrollable table-custom-format">
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>STT</th>
                <th>Code</th>
                <th>Họ tên</th>
                <th>Địa chỉ</th>
                <th>Điện thoại</th>
                <th>CMND</th>
                <th>Passport</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <tr class="odd gradeX">
                        <td>@i</td>
                        <td>@item.Code</td>
                        <td>@item.FullName</td>
                        <td>@item.Address, @(item.TagsId != null ? LoadData.LocationTags(item.TagsId) : "")</td>
                        <td>@item.Mobile</td>
                        <td>@item.IdentityCard</td>
                        <td>@item.PassportCard</td>
                        i++;
                    </tr>
                }
            }
        </tbody>
    </table>
</div>


