@using CRMViettour.Models
@using CRM.Core
@model IEnumerable<DocumentFileViewModel>

<div class="table-responsive table-custom-format" id="tableDictionary-Wrapper">
    <table class="table table-striped table-bordered table-hover dataTable" id="tableDictionary">
        <thead>
            <tr>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
            <tr>
                <th class="table-checkbox">
                    <input type="checkbox" id="allcb" name="allcb" onclick="SelectAllCb()" />
                </th>
                <th>Ký hiệu</th>
                <th>Tên tài liệu</th>
                <th>Loại tài liệu</th>
                <th>Diễn giải</th>
                <th>Kích thước</th>
                <th>Người tạo</th>
                <th>Ngày tạo</th>
                <th>Người sửa</th>
                <th>Ngày sửa</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <input type="checkbox" id="cb@(item.Id)" class="cbItem" value="@item.Id" name="cb" onclick="CheckSelect()" />
                    </td>
                    <td>@item.Code</td>
                    <td>
                        <a style="cursor:pointer" onclick="viewFileOnline(@item.Id)">@item.FileName</a>
                        <input type="hidden" value="@item.URL" id="txtURL@(item.Id)" />
                    </td>
                    <td>@item.DictionaryName</td>
                    <td>@Html.Raw(item.Note)</td>
                    <td>@item.FileSize</td>
                    <td></td>
                    <td>@item.CreatedDate</td>
                    <td></td>
                    <td>@item.ModifiedDate</td>
                </tr>
            }
        </tbody>
    </table>
</div>

