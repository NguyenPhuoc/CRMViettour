@using CRMViettour.Models
@using CRMViettour.Utilities
@model SeededTagsViewModel

<div class="modal fade " id="modal-insert-location" role="document" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">Thêm mới</h4>
            </div>
            @using (Html.BeginForm("Create", "LocationTagsManage"))
            { 
            <div class="modal-body">
                <div class="form-horizontal">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="control-label col-lg-3 col-md-3">Loại tag</label>
                                <div class="col-lg-9 col-md-9">
                                    <select name="ddlTagsType" class="form-control" id="selectTagsType" style="width: 100%">
                                        <option value="1">Châu lục</option>
                                        <option value="2">Vùng châu lục</option>
                                        <option value="3">Quốc gia</option>
                                        <option value="4">Vùng miền</option>
                                        <option value="5">Tỉnh/Thành</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-lg-3 col-md-3">Danh mục</label>
                                <div class="col-lg-9 col-md-9">
                                    <select name="ddlTags" class="form-control" id="selectTags" style="width: 100%">
                                        <option>-- Chọn --</option>
                                        @foreach (var item in LoadData.LoadTagsByType(1))
                                        {
                                            <option value="@item.Id">@item.Tag</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-lg-3 col-md-3">Tags</label>
                                <div class="col-lg-9 col-md-9">
                                    <input type="text" name="txtTag" class="form-control" requried="requried" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-lg-3 col-md-3">Iso Code</label>
                                <div class="col-lg-9 col-md-9">
                                    <input type="text" name="txtIsoCode" class="form-control" requried="requried" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div align="center" style="margin-bottom: 20px">
                <button type="submit" class="btn blue" name="btnSave">Lưu</button>
                <button type="button" class="btn default" data-dismiss="modal">Đóng</button>
            </div>
            }
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
