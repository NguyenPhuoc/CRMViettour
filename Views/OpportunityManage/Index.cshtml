@{
    ViewBag.Title = "Quản lý cơ hội";
}

<div class="page-content">
    <!-- BEGIN PAGE HEAD-->
    <div class="page-head">
        <!-- BEGIN PAGE TITLE -->
        <div class="page-title">
            <h1>QUẢN LÝ CƠ HỘI</h1>
        </div>
        <!-- END PAGE TITLE -->

    </div>
    <!-- END PAGE HEAD-->
    <!-- BEGIN PAGE BREADCRUMB -->
    <ul class="page-breadcrumb breadcrumb">
        <li>
            <a href="index.html">Home</a>
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <span class="active">Page Layouts</span>
        </li>
    </ul>
    <!-- END PAGE BREADCRUMB -->
    <div class="note note-info">
        <div class="row">
            <div class="col-md-12">
                <button class="btn btn-default"><i class="fa fa-refresh"></i>&nbsp;Nạp</button>
                <button class="btn btn-primary" id="btnAdd" href="#modal-insert-opportunity" data-toggle="modal"><i class="fa fa-plus"></i>&nbsp;Thêm mới cơ hội</button>
                <button class="btn btn-warning" id="btnEdit" href="#modal-edit-opportunity" data-toggle="modal"><i class="fa fa-pencil"></i>&nbsp;Sửa</button>
                <button class="btn btn-danger" id="btnRemove" onclick="confirm('Bạn có chắc chắn xóa không?');"><i class="fa fa-remove"></i>&nbsp;Xóa</button>
                <button class="btn blue" id="btnAddTask" href="#modal-insert-opportunitytask" data-toggle="modal"><i class="fa fa-clipboard"></i>&nbsp;Phân công nhiệm vụ</button>
                <button class="btn btn-success" id="btnCreateTour" onclick="confirm('Bạn có chắc chắn không?');"><i class="fa fa-share"></i>&nbsp;Tạo tour</button>
            </div>
        </div>
    </div>
    <!-- BEGIN PAGE BASE CONTENT -->
    <div class="row">
        <div class="col-md-12 col-sm-12">
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-list-alt font-red"></i>
                        <span class="caption-subject bold uppercase font-red">Danh sách Cơ hội</span>
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="table-responsive table-custom-format">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>
                                        <input type="checkbox" id="allcb" name="allcb" onclick="SelectAllCb()" /></th>
                                    <th>STT</th>
                                    <th>Tên tour</th>
                                    <th>Thời gian</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        <input type="checkbox" id="cb1" name="cb" onclick="CheckSelect()" /></td>
                                    <td>1</td>
                                    <td>Tour xuyên Việt 15N15Đ</td>
                                    <td>1/12/2015 - 15/12/2015</td>
                                </tr>
                                <tr>
                                    <td>
                                        <input type="checkbox" id="cb2" name="cb" onclick="CheckSelect()" /></td>
                                    <td>2</td>
                                    <td>Tour Singapore - Thái Lan 6N5Đ</td>
                                    <td>16/12/2015 - 22/12/2015</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-12 col-sm-12">
            <div class="portlet light bordered">
                <div class="portlet-body">
                    <div class="tabbable-custom ">
                        <ul class="nav nav-tabs ">
                            <li class="active">
                                <a href="#tab1" data-toggle="tab">Chi tiết</a>
                            </li>
                            <li>
                                <a href="#tab3" data-toggle="tab">Nhiệm vụ</a>
                            </li>
                            <li>
                                <a href="#tab6" data-toggle="tab">Báo giá</a>
                            </li>
                            <li>
                                <a href="#tab7" data-toggle="tab">Đánh giá</a>
                            </li>
                            <li>
                                <a href="#tab8" data-toggle="tab">Lịch sử liên hệ</a>
                            </li>
                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane active" id="tab1">
                                <div class="row">
                                    <div class="col-md-6">
                                        Code tour:<br />
                                        Tên tour:<br />
                                        Số ngày:
                                        <br />
                                        Thời gian:
                                        <br />
                                        Tuyến:
                                        <br />
                                        Người liên hệ:
                                        <br />
                                        Điện thoại:
                                        <br />
                                    </div>
                                    <div class="col-md-6">
                                        Yêu cầu cụ thể:
                                        <br />
                                        Tình trạng:<br />
                                        ...
                                        <br />
                                    </div>

                                </div>
                            </div>
                            <div class="tab-pane" id="tab3">
                                @*Nhiệm vụ*@
                                <div class="table-scrollable table-custom-format">
                                    <table class="table table-striped table-bordered table-hover" id="table-task">
                                        <thead>
                                            <tr>
                                                <th>STT</th>
                                                <th>Mã</th>
                                                <th>Loại nhiệm vụ</th>
                                                <th>Tên</th>
                                                <th>Người thực hiện</th>
                                                <th>Phòng ban</th>
                                                <th>Ngày bắt đầu</th>
                                                <th>Ngày kết thúc</th>
                                                <th>Thời hạn</th>
                                                <th>Tiến độ</th>
                                                <th>Mức độ</th>
                                                <th>Ngày hoàn thành</th>
                                                <th>Nội dung</th>
                                                <th>Người giao</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr class="odd gradeX">
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <div class="tab-pane" id="tab6">
                                @*Báo giá*@
                                <div class="table-scrollable table-custom-format">
                                    <table class="table table-striped table-bordered table-hover" id="table-pricetag">
                                        <thead>
                                            <tr>
                                                <th>STT</th>
                                                <th>Số BG</th>
                                                <th>Ngày BG</th>
                                                <th>Ngày yêu cầu</th>
                                                <th>Người báo giá</th>
                                                <th>Số tiền</th>
                                                <th>Loại tiền</th>
                                                <th>Tiêu đề</th>
                                                <th>Ghi chú</th>
                                                <th>Người nhập</th>
                                                <th>Ngày nhập</th>
                                                <th>Người sửa</th>
                                                <th>Ngày sửa</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr class="odd gradeX">
                                                <td></td>
                                                <td></td>
                                                <td></td>
