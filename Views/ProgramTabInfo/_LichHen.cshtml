
@using CRM.Core
@model IEnumerable<tbl_AppointmentHistory>
@{
    int i = 1;
}

<a href="#modal-insert-schedule" class="btn btn-primary" data-toggle="modal" onclick="btnAddLichHen()" id="btnAddLichHen"><i class="fa fa-plus"></i>&nbsp;Thêm</a>
<br /><br />
<div class="table-scrollable table-custom-format">
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>STT</th>
                <th>Chủ đề</th>
                <th>Thời gian</th>
                <th>Trạng thái</th>
                <th>Nhân viên</th>
                <th>Ghi chú</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <tr class="odd gradeX">
                        <td>@i</td>
                        <td>@item.Title</td>
                        <td>@string.Format("{0:dd-MM-yyyy}", item.Time)</td>
                        <td>@item.tbl_DictionaryStatus.Name</td>
                        <td>@item.tbl_Staff.FullName</td>
                        <td>@Html.Raw(item.Note)</td>
                    </tr>
                    i++;
                }
            }
        </tbody>
    </table>
</div>
