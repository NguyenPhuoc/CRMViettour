
@using CRM.Core
@model IEnumerable<tbl_ContactHistory>
@{
    int k = 1;
}

<div class="table-scrollable table-custom-format">
    <table class="table table-striped table-bordered table-hover" id="table-history">
        <thead>
            <tr>
                <th>STT</th>
                <th>Ngày</th>
                <th>Yêu cầu xử lý</th>
                <th>Trạng thái xử lý</th>
                <th>Diễn giải</th>
                <th>Nhân viên xử lý</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <tr class="odd gradeX">
                        <td>@k</td>
                        <td>@string.Format("{0:dd-MM-yyyy}", item.ContactDate)</td>
                        <td>@item.Request</td>
                        <td>@item.tbl_Dictionary.Name</td>
                        <td>@Html.Raw(item.Note)</td>
                        <td>@item.tbl_Staff.FullName</td>
                    </tr>
                    k++;
                }
            }
        </tbody>
    </table>
</div>
