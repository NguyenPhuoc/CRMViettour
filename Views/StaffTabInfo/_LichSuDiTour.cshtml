@using CRM.Core
@using CRMViettour.Models
@using CRMViettour.Utilities
@model IEnumerable<tbl_TourSchedule>
    @{
        int i = 1;
    }

    <div class="table-scrollable table-custom-format">
        <table class="table table-striped table-bordered table-hover" id="table-booking">
            <thead>
                <tr>
                    <th>STT</th>
                    <th>Tour</th>
                    <th>Loại dịch vụ</th>
                    <th>Tên đối tác</th>
                    <th>Nội dung</th>
                    <th>Thời gian</th>
                    <th>Người nhập</th>
                    <th>Ngày nhập</th>
                    <th>#</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    foreach (var item in Model)
                    {
                        <tr class="odd gradeX">
                            <td>@i</td>
                            <td>@item.tbl_Tour.Name</td>
                            <td>@(item.tbl_Dictionary != null ? item.tbl_Dictionary.Name : "")</td>
                            <td>@(item.tbl_Partner != null ? item.tbl_Partner.Name : "")</td>
                            <td>@Html.Raw(item.Note)</td>
                            <td>@string.Format("{0} {1:dd-MM-yyyy}",item.StartTime , item.Date)</td>
                            <td></td>
                            <td>@string.Format("{0:dd-MM-yyyy}", item.CreatedDate)</td>
                            <td>
                                @if (ViewBag.IsDelete != null && ViewBag.IsDelete)
                                { <a style="cursor: pointer" onclick="deleteTourSchedule(@item.Id)"><i class="fa fa-trash"></i>&nbsp;Xóa</a> }
                            </td>
                        </tr>
                        i++;
                    }
                }
            </tbody>
        </table>
    </div>
