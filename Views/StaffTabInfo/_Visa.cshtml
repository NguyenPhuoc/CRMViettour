@using CRM.Core
@using CRMViettour.Models
@model IEnumerable<tbl_StaffVisa>
@{
    int i = 1;
}

<div class="table-scrollable table-custom-format">
    <button class="btn btn-primary" id="btnCreateVisa" onclick="btnCreateVisa()"><i class="fa fa-plus"></i>&nbsp;Thêm</button>
    <br />
    <br />
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>STT</th>
                <th>Mã visa</th>
                <th>Quốc gia</th>
                <th>Tình trạng</th>
                <th>Loại visa</th>
                <th>Thời hạn (năm)</th>
                <th>Ngày có hiệu lực</th>
                <th>Ngày hết hạn</th>
                <th>#</th>
            </tr>
        </thead>
        @if (Model != null)
        {
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="odd gradeX" id="visaStaff@(item.Id)">
                        <td>@i</td>
                        <td>@item.VisaNumber</td>
                        <td>@item.tbl_Tags.Tag</td>
                        <td>@item.tbl_Dictionary.Name</td>
                        <td>@item.VisaType</td>
                        <td>@item.Deadline</td>
                        <td>@string.Format("{0:dd-MM-yyyy}", item.CreatedDateVisa)</td>
                        <td>@string.Format("{0:dd-MM-yyyy}", item.ModifiedDate)</td>
                        <td>
                            <a style="cursor: pointer" onclick="updateVisa(@item.Id)"><i class="fa fa-pencil"></i>&nbsp;Sửa</a><br />
                            <a style="cursor: pointer" onclick="confirm('Bạn thực sự muốn xóa những mục đã chọn ?'); deleteVisa(@item.Id)"><i class="fa fa-trash"></i>&nbsp;Xóa</a>
                        </td>
                    </tr>
                }
            </tbody>
        }
    </table>
</div>
