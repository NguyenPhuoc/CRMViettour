@using CRM.Core
@using CRMViettour.Models
@using CRMViettour.Utilities
@model IEnumerable<tbl_Task>
    @{
        ViewBag.Title = "Quản lý Nhiệm vụ";
    }

    <div class="page-content">
        <!-- BEGIN PAGE HEAD-->
        <div class="page-head">
            <!-- BEGIN PAGE TITLE -->
            <div class="page-title">
                <h1>DANH SÁCH NHIỆM VỤ</h1>
            </div>
            <!-- END PAGE TITLE -->

        </div>
        <!-- END PAGE HEAD-->
        <!-- BEGIN PAGE BREADCRUMB -->
        <ul class="page-breadcrumb breadcrumb">
            <li>
                <a href="index.html">Home</a>
                <i class="fa fa-circle"></i>
            </li>
            <li>
                <span class="active">Page Layouts</span>
            </li>
        </ul>
        <!-- END PAGE BREADCRUMB -->
        <!-- BEGIN PAGE BASE CONTENT -->
        <div class="note note-info">
            <div class="row">
                <div class="col-md-4">
                    <select class="form-control" id="customer-select2" @*multiple="multiple"*@>
                        <option value="0">-- Loại hình dịch vụ --</option>
                        <option value="1">Tour trọn gói</option>
                        <option value="2">Khách sạn</option>
                        <option value="3">Nhà hàng</option>
                        <option value="4">Vận chuyển</option>
                        <option value="5">Hội nghị</option>
                        <option value="6">Visa</option>
                        <option value="7">Máy bay</option>
                        <option value="8">Khác</option>
                    </select>
                </div>
                <div class="col-md-8">
                    <div class="pull-right">
                        <a class="btn btn-default" href="@Url.Action("Index", "TaskManage")"><i class="fa fa-refresh"></i>&nbsp;Nạp</a>
                        <button class="btn btn-primary" href="#modal-insert-task" data-toggle="modal" id="btnAdd"><i class="fa fa-plus"></i>&nbsp;Thêm</button>
                        <button class="btn btn-warning" id="btnEdit"><i class="fa fa-pencil"></i>&nbsp;Sửa</button>
                        <button class="btn btn-danger" id="btnRemove" onclick="confirm('Bạn có chắc chắn muốn xóa?');"><i class="fa fa-remove"></i>&nbsp;Xóa</button>
                        <form action="@Url.Action("Delete", "TaskManage")" method="post" style="position:absolute">
                            @Html.AntiForgeryToken()
                            <input type="hidden" id="listItemId" name="listItemId" />
                        </form>
                        <button class="btn green" href="#modal-assign-task" data-toggle="modal" id="btnAssign"><i class="fa fa-retweet"></i>&nbsp;Giao việc</button>
                        <button class="btn red" href="#modal-work-task" data-toggle="modal" id="btnWork"><i class="fa fa-cogs"></i>&nbsp;Xử lý</button>
                        <button class="btn btn-info" id="btnFinish" onclick="confirm('Bạn có chắc chắn xác nhận hoàn thành nhiệm vụ này không?');"><i class="fa fa-check-square-o"></i>&nbsp;Hoàn thành</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="note note-info">
            <div class="row">
                <div class="col-md-2" style="padding-right: 0">
                    <select class="form-control" id="customer-select2" @*multiple="multiple"*@>
                        <option value="0">Thời gian</option>
                    </select>
                </div>
                <div class="col-md-2" style="padding-right: 0">
                    <input type="text" class="form-control datepicker" id="tungay" />
                </div>
                <div class="col-md-2" style="padding-right: 0">
                    <input type="text" class="form-control datepicker" id="denngay" />
                </div>
                <div class="col-md-2" style="padding-right: 0">
                    <select class="form-control" id="customer-select2" @*multiple="multiple"*@>
                        <option value="0">Loại nhiệm vụ</option>
                    </select>
                </div>
                <div class="col-md-2" style="padding-right: 0">
                    <select class="form-control" id="customer-select2" @*multiple="multiple"*@>
                        <option value="0">Tình trạng</option>
                    </select>
                </div>
                <div class="col-md-2" style="padding-right: 0">
                    <select class="form-control" id="customer-select2" @*multiple="multiple"*@>
                        <option value="0">Mức độ</option>
                    </select>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="portlet light bordered">
                    <div class="portlet-body">
                        <div class="table-scrollable table-custom-format">
                            <table class="table table-striped table-bordered table-hover dataTable" id="tableDictionary">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th></th>
                                        <th></th>
                                        <th></th>
                                        <th></th>
                                        <th></th>
                                        <th></th>
                                        <th></th>
                                        <th></th>
                                        <th></th>
                                        <th></th>
                                    </tr>
                                    <tr>
                                        <th class="table-checkbox">
                                            <input type="checkbox" id="allcb" name="allcb" onclick="SelectAllCb()" />
                                        </th>
                                        <th>STT</th>
                                        <th>Nhiệm vụ</th>
                                        <th>Người tạo</th>
                                        <th>Loại nhiệm vụ</th>
                                        <th>Code tour</th>
                                        <th>Email</th>
                                        <th>Điện thoại</th>
                                        <th>Ngày bắt đầu</th>
                                        <th>Ngày kết thúc</th>
                                        <th>Thời hạn</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int i = 0;
                                    }
                                    @foreach (var item in Model)
                                    {
                                        i++;
                                        <tr class="odd gradeX">
                                            <td>
                                                <input type="checkbox" value="@item.Id" class="cbItem" name="cb" onclick="CheckSelect()" />
                                            </td>
                                            <td>
                                                @i
                                            </td>
                                            <td>
                                                @item.Name
                                            </td>
                                            <td>
                                                @item.tbl_Staff.FullName
                                            </td>
                                            <td>@(item.tbl_DictionaryTaskType != null ? item.tbl_DictionaryTaskType.Name : "")</td>
                                            <td>@item.CodeTour</td>
                                            <td>@item.Email</td>
                                            <td>@item.Phone</td>
                                            <td>@item.StartDate.ToString("dd-MM-yyyy")</td>
                                            <td>@item.EndDate.ToString("dd-MM-yyyy")</td>
                                            <td>@item.Time</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="portlet light bordered">
                    <div class="portlet-body">
                        <div class="tabbable-custom ">
                            <ul class="nav nav-tabs ">
                                <li class="active">
                                    <a href="#tab1" data-toggle="tab">Chi tiết nhiệm vụ</a>
                                </li>
                                <li>
                                    <a href="#tab2" data-toggle="tab">Lịch sử cập nhật</a>
                                </li>
                                <li>
                                    <a href="#tab3" data-toggle="tab">Lịch hẹn</a>
                                </li>
                                <li>
                                    <a href="#tab4" data-toggle="tab">DS nhân vên đang làm nhiệm vụ</a>
                                </li>
                                <li>
                                    <a href="#tab5" data-toggle="tab">Tài liệu mẫu</a>
                                </li>
                                <li>
                                    <a href="#tab6" data-toggle="tab">Ghi chú</a>
                                </li>
                            </ul>
                            <div class="tab-content">
                                <div class="tab-pane active" id="tab1">
                                    @*Chi tiết nhiệm vụ*@
                                </div>
                                <div class="tab-pane" id="tab2">
                                    @*Lịch sử cập nhật*@
                                    <div class="table-scrollable table-custom-format">
                                        <table class="table table-striped table-bordered table-hover" id="">
                                            <thead>
                                                <tr>
                                                    <th>STT</th>
                                                    <th>Ngày cập nhật</th>
                                                    <th>Người cập nhật</th>
                                                    <th>Diễn giải</th>
                                                    <th>% hoàn thành</th>
                                                    <th>Tình trạng</th>
                                                    <th>Tiến độ</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr class="odd gradeX">
                                                    <td></td>
                                                    <td></td>
                                                    <td></td>
                                                    <td></td>
                                                    <td></td>
                                                    <td></td>
                                                    <td></td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <div class="tab-pane" id="tab3">
                                    @*Lịch hẹn*@
                                    <div class="table-scrollable table-custom-format">
                                        <table class="table table-striped table-bordered table-hover" id="">
                                            <thead>
                                                <tr>
                                                    <th>STT</th>
                                                    <th>Tiêu đề</th>
                                                    <th>Người thực hiện</th>
                                                    <th>Địa điểm</th>
                                                    <th>Diễn giải</th>
                                                    <th>Ngày bắt đầu</th>
                                                    <th>Ngày kết thúc</th>
                                                    <th>Liên quan đến khách hàng</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr class="odd gradeX">
                                                    <td>1</td>
                                                    <td>Chốt HĐ CRM Viettours</td>
                                                    <td>Võ Ái Duy</td>
                                                    <td>Công ty DIP VIETNAM</td>
                                                    <td>KH sang làm việc về quy trình xử lý và các chức năng. Chốt hợp đồng CRM.</td>
                                                    <td>1/11/2015</td>
                                                    <td>2/11/2015</td>
                                                    <td></td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <div class="tab-pane" id="tab4">
                                    @*Danh sách nhân viên đang làm nhiệm vụ*@
                                    <div class="table-scrollable table-custom-format">
                                        <table class="table table-striped table-bordered table-hover" id="">
                                            <thead>
                                                <tr>
                                                    <th>STT</th>
                                                    <th>Mã số</th>
                                                    <th>Họ tên</th>
                                                    <th>Vai trò</th>
                                                    <th>Diễn giải</th>
                                                    <th>Ngày giao</th>
                                                    <th>Người giao việc</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr class="odd gradeX">
                                                    <td></td>
                                                    <td></td>
                                                    <td></td>
                                                    <td></td>
                                                    <td></td>
                                                    <td></td>
                                                    <td></td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <div class="tab-pane" id="tab5">
                                    @*Tài liệu*@
                                    <div class="table-scrollable table-custom-format">
                                        <table class="table table-striped table-bordered table-hover" id="">
                                            <thead>
                                                <tr>
                                                    <th>STT</th>
                                                    <th>Tags</th>
                                                    <th>Tên tài liệu</th>
                                                    <th>Diễn giải</th>
                                                    <th>Kích thước</th>
                                                    <th>Nhân viên nhập</th>
                                                    <th>Ngày cập nhật</th>
                                                    <th>#</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr class="odd gradeX">
                                                    <td></td>
                                                    <td></td>
                                                    <td></td>
                                                    <td></td>
                                                    <td></td>
                                                    <td></td>
                                                    <td></td>
                                                    <td><a href="#">Xem online</a></td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <div class="tab-pane" id="tab6">
                                    @*Ghi chú*@
                                    <div class="table-scrollable table-custom-format">
                                        <table class="table table-striped table-bordered table-hover" id="">
                                            <thead>
                                                <tr>
                                                    <th>STT</th>
                                                    <th>Ghi chú</th>
                                                    <th>Nội dung</th>
                                                    <th>Người nhập</th>
                                                    <th>Ngày nhập</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr class="odd gradeX">
                                                    <td></td>
                                                    <td></td>
                                                    <td></td>
                                                    <td></td>
                                                    <td></td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- END PAGE BASE CONTENT -->
    </div>

    @Html.Partial("_Partial_InsertTask", new tbl_Task())
    <div id="info-data-task"></div>

    @Html.Partial("_Partial_AssignTask", new tbl_TaskStaff())
    @Html.Partial("_Partial_WorkTask")


    @section scripts{
        <script src="~/Scripts/controller/task.js"></script>
        <script>
            CKEDITOR.replace("Note");
        </script>

        <script>
            $("#insert-check-notify").click(function () {
                if (this.checked) {
                    $("#insert-ngaynhac").removeAttr("disabled", "disabled");
                }
                else {
                    $("#insert-ngaynhac").attr("disabled", "disabled");
                }
            });

            
        </script>
    }
