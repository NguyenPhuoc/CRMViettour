<div class="modal fade  bs-modal-lg" id="modal-edit-task" role="document" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">Nhiệm vụ</h4>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="control-label col-lg-2 col-md-2">Tên nhiệm vụ</label>
                                <div class="col-lg-10 col-md-10">
                                    <input type="text" value="" class="form-control" name="TaskName" />
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label col-lg-4 col-md-4">Ngày bắt đầu</label>
                                <div class="col-lg-8 col-md-8">
                                    <div class="input-group" data-date-format="mm/dd/yyyy">
                                        <input type="date" class="form-control" id="edit-ngaybdau" name="TaskStartDate">
                                        <span class="input-group-btn">
                                            <button class="btn default date-set" type="button">
                                                <i class="fa fa-calendar"></i>
                                            </button>
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-lg-4 col-md-4">Loại nhiệm vụ</label>
                                <div class="col-lg-8 col-md-8">
                                    <select class="form-control" name="TaskType">
                                        <option>Hàng ngày</option>
                                        <option>Hàng tháng</option>
                                        <option>Hàng tuần</option>
                                        <option>---------</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-lg-4 col-md-4">Ngày hoàn thành</label>
                                <div class="col-lg-8 col-md-8">
                                    <input type="text" class="form-control" readonly name="TaskCompleteDate" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-lg-4 col-md-4">
                                    <input type="checkbox" />&nbsp;Ngày nhắc</label>
                                <div class="col-lg-8 col-md-8">
                                    <div class="input-group" data-date-format="mm/dd/yyyy">
                                        <input type="date" class="form-control"  id="edit-ngaynhac" name="TaskAlertDate">
                                        <span class="input-group-btn">
                                            <button class="btn default date-set" type="button">
                                                <i class="fa fa-calendar"></i>
                                            </button>
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-lg-4 col-md-4">Nhân viên</label>
                                <div class="col-lg-8 col-md-8">
                                    <select id="edit-staff-tour" class="form-control" name="TaskStaff" multiple="multiple" style="width: 100%">
                                        <option>A</option>
                                        <option>B</option>
                                        <option>C</option>
                                        <option>D</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label col-lg-4 col-md-4">Ngày kết thúc</label>
                                <div class="col-lg-8 col-md-8">
                                    <div class="input-group" data-date-format="mm/dd/yyyy">
                                        <input type="date" class="form-control" id="edit-ngaykthuc" name="TaskEndDdate">
                                        <span class="input-group-btn">
                                            <button class="btn default date-set" type="button">
                                                <i class="fa fa-calendar"></i>
                                            </button>
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-lg-4 col-md-4">Tình trạng</label>
                                <div class="col-lg-8 col-md-8">
                                    <select class="form-control" name="TaskStatus">
                                        <option>Chưa bắt đầu</option>
                                        <option>Bắt đầu</option>
                                        <option>Đang xử lý</option>
                                        <option>----------</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-lg-4 col-md-4">% hoàn thành</label>
                                <div class="col-lg-8 col-md-8">
                                    <input type="number" class="form-control" name="TaskPercentFinish" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-lg-4 col-md-4">Nhạc chuông</label>
                                <div class="col-lg-8 col-md-8">
                                    <button name="TaskBell"><i class="fa fa-bell"></i></button>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-lg-4 col-md-4">Ưu tiên</label>
                                <div class="col-lg-8 col-md-8">
                                    <select class="form-control" name="TaskPriority">
                                        <option>Bình thường</option>
                                        <option>Gấp</option>
                                        <option>Cao</option>
                                        <option>Rất cao</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="control-label col-lg-2 col-md-2">Ghi chú</label>
                                <div class="col-lg-10 col-md-10">
                                    <textarea name="edit-note-task" class="form-control" nam="TaskNoteEdit"></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="control-label col-lg-2 col-md-2">Khách hàng</label>
                                <div class="col-lg-10 col-md-10">
                                    <select id="edit-customer-task" class="form-control" style="width: 100%" name="TaskCustomer">
                                        <option>------</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div align="center" style="margin-bottom: 20px">
                <button type="button" class="btn blue" id="btnLuuThem">Lưu</button>
                <button type="button" class="btn default" data-dismiss="modal">Đóng</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>

