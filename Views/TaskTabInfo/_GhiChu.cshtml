@using CRM.Core
@using CRMViettour.Models
@using CRMViettour.Utilities
@model IEnumerable<tbl_TaskNote>
@{
    int i = 1;
}
<a class="btn btn-primary" id="btnCreateNote" onclick="btnCreateNote()"><i class="fa fa-plus"></i>&nbsp;Thêm ghi chú</a>
<br />
<br />
<div class="table-scrollable table-custom-format">
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>STT</th>
                <th>Ghi chú</th>
                <th>Nhân viên</th>
                <th>Ngày</th>
                <th>#</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <tr class="odd gradeX" id="notePartner@(item.Id)">
                        <td>@i</td>
                        <td>@Html.Raw(item.Note)</td>
                        <td>@item.tbl_Staff.FullName</td>
                        <td>@string.Format("{0:dd-MM-yyyy}", item.CreatedDate)</td>
                        <td>
                            <a style="cursor: pointer" onclick="updateNote(@item.Id)"><i class="fa fa-pencil"></i>&nbsp;Sửa</a><br />
                            <a style="cursor: pointer" onclick="confirm('Bạn thực sự muốn xóa mục đã chọn ?'); deleteNote(@item.Id)"><i class="fa fa-trash"></i>&nbsp;Xóa</a>
                        </td>
                    </tr>
                    i++;
                }
            }
        </tbody>
    </table>
</div>