@model IEnumerable<CRMViettour.Models.TourViewModel>
@{
    int i = 1;
}

<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
        </tr>
        <tr>
            <th>
                <input type="checkbox" id="allcb" name="allcb" onclick="SelectAllCb()" />
            </th>
            <th>STT</th>
            <th>Code tour</th>
            <th>Tên tour</th>
            <th>Khách hàng</th>
            <th>Điểm đến</th>
            <th>Số lượng</th>
            <th>Ngày khởi hành</th>
            <th>Ngày về</th>
            <th>Thời gian</th>
            <th>Hướng dẫn viên</th>
            <th>Loại tour</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            @foreach (var item in Model)
            {
                <td>
                    <input type="checkbox" value="@item.Id" id="cb@(item.Id)" class="cbItem" name="cb" onclick="CheckSelect()" />
                </td>
                <td>@i</td>
                <td>@item.Code</td>
                <td>@item.Name</td>
                <td>@item.CustomerName</td>
                <td>@item.DestinationPlace</td>
                <td>@item.NumberCustomer</td>
                <td>@string.Format("{0:dd-MM-yyyy}", item.StartDate)</td>
                <td>@string.Format("{0:dd-MM-yyyy}", item.EndDate)</td>
                <td>@item.NumberDay</td>
                <td>@item.TourGuide</td>
                <td>@item.TourType</td>
                i++;
            }
        </tr>
    </tbody>
</table>
